<!-- this is user -->
<div id="form-wrapper" class="black-background">
		<h1><font color="CCFFFF">~* Registration *~</h1>
		<form method="POST" action="/signup">
		
			<fieldset>
				<label><font color="white">First Name</label>
				<input class="first-name"type="firstname" name="firstname"></input>
			</fieldset>

			<fieldset>
				<label><font color="white">Last Name</label>
				<input class="last-name"type="lastname" name="lastname"></input>
			</fieldset>

			<fieldset>
				<label><font color="white">Email</label>
				<input class="email" type="email" name="email"></input>
			</fieldset>

			<fieldset>
				<label><font color="white">Username</label>
				<input class="username" type="username" name="username"></input>
			</fieldset>

			<fieldset>
				<label><font color="white">Password:</label>
				<input class="password" type="password" name="password"></input>
			</fieldset>
			
			<fieldset>
				<!--Submit Button!-->
				
				<input class="submit-button" type="submit" name="submit">
					
				</input>	
			</fieldset>
		
		</form>
	</div>